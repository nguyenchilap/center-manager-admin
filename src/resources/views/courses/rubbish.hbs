<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Course</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        List Course
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <!-- Single button -->
                                        <div class="btn-group">
                                        <button type="button" class="btn btn-primary dropdown-toggle btn-action disabled" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Action all selected <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu list-actions">
                                            <li><a>Restore</a></li>
                                        </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <a class="btn btn-primary btn-open-rubbish" href="/courses/rubbish/"> 
                                        Back to Course list
                                    </a>
                                </div>
                            </div>
                            <form class="form-action" method="POST" action="/courses/handle-form-actions">
                                <input type="text" class="input-action" name="input-action" style="display: none;">
                                <table class="table table-striped table-bordered table-hover courses-list" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>ID Course</th>
                                            <th>Name</th>
                                            <th>Level</th>
                                            <th>Types</th>
                                            <th>Number of student</th>
                                            <th>Price</th>
                                            <th>Create date</th>
                                            <th>Last update date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each courses}}
                                            <tr class="odd gradeX course-item" idCourse="{{this._id}}">
                                                <td>
                                                    <input class="course-item__checkbox" type="checkbox" name="courseIds[]" value="{{this._id}}">
                                                    {{this._id}}
                                                </td>
                                                <td>{{this.name}}</td>
                                                <td>{{this.level}}</td>
                                                <td>{{#each this.courseTypes}} <div>{{this}}</div> {{/each}}</td>
                                                <td>0</td>
                                                <td>{{this.price}}</td>
                                                <td>{{this.createdAt}}</td>
                                                <td>{{this.updatedAt}}</td>
                                            </tr>
                                        {{else}}
                                        <tr>
                                            <td colspan="8" class="text-center">
                                                BẠN CHƯA ĐĂNG KHÓA HỌC NÀO
                                                <a href="/courses/create">Đăng khóa học ngay !!</a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </form>
                        </div>
                        <!-- /.table-responsive -->
                        
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->

<!-- DataTables JavaScript -->
<script src="/js/dataTables/jquery.dataTables.min.js"></script>
<script src="/js/dataTables/dataTables.bootstrap.min.js"></script>
<script>
        const checkboxCourses = $('input[name="courseIds[]"]');

        //enable pagination table
        $(document).ready(function() {
            $('#dataTables-example').DataTable({
                    responsive: true
            });
        });

        //check box
        $('.course-item__checkbox').click(function(e){
            e.stopPropagation();
        });

        checkboxCourses.change(function(){
            renderBtnAction();
        })

        //render button action
        renderBtnAction = () =>{
            if ($('input[name="courseIds[]"]:checked').length) $('.btn.btn-action').removeClass('disabled');
            else $('.btn.btn-action').addClass('disabled');
        }

        //submit btn action
        $('.list-actions li a').click(function(e){
            e.preventDefault();
            $('.input-action').attr('value',`${$(this).html()}`);
            $('.form-action').submit();
        })
</script>