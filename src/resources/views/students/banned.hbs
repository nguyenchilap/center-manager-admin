<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Banned Student</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        List Student banned
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group form-group-actions">
                                        <div>
                                            <input class="checkBox-select-all" name="checkBox-select-all" type="checkbox">
                                            <label for="checkBox-select-all">Select all</label>
                                        </div>
                                        <!-- Single button -->
                                        <div class="btn-group btn-group-actions">
                                        <button type="button" class="btn btn-primary dropdown-toggle btn-action disabled" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Action all selected <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu list-actions">
                                            <li><a>Restore</a></li>
                                            <li><a></a></li>
                                        </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <a class="btn btn-primary btn-open-rubbish" href="/students"> 
                                        Back to Student list
                                    </a>
                                </div>
                            </div>
                            <form class="form-action" method="POST" action="/students/banned/handle-form-actions">
                                <input type="text" class="input-action" name="input-action" style="display: none;">
                                <table class="table table-striped table-bordered table-hover table-item-list" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>ID Student</th>
                                            <th>Name</th>
                                            <th>Username</th>
                                            <th>Type Banned</th>
                                            <th>Banned by</th>
                                            <th>Banned at</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each students}}
                                            <tr class="odd gradeX table-item" idCourse="{{this._id}}">
                                                <td>
                                                    <input class="table-item__checkbox" type="checkbox" name="itemIds[]" value="{{this._id}}">
                                                    {{this._id}}
                                                </td>
                                                <td>{{this.name}}</td>
                                                <td>{{this.account.username}}</td>
                                                <td>
                                                    {{#if this.banned.comment}}
                                                        Comment
                                                    {{else}}
                                                        {{#if this.banned.login}}
                                                            Login
                                                        {{/if}}
                                                    {{/if}}
                                                </td>
                                                <td>{{this.banned.bannedBy}}</td>
                                                <td>{{dateTimeModifier this.banned.bannedAt}}</td>
                                            </tr>
                                        {{else}}
                                        <tr>
                                            <td colspan="8" class="text-center">
                                                CHƯA CÓ HỌC VIÊN NÀO BỊ BAN
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </form>
                        </div>
                        <!-- /.table-responsive -->
                        
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->

<!-- DataTables JavaScript -->
<script src="/js/dataTables/jquery.dataTables.min.js"></script>
<script src="/js/dataTables/dataTables.bootstrap.min.js"></script>
<script src="/js/checkbox.js"></script>