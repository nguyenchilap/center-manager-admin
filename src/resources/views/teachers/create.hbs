<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Course</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Create new Teacher
                    </div>
                    <form class="panel-body" method="POST" action="/teachers/create" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-6">
                                <div role="form">
                                    <div class="form-group">
                                        <label>Name</label>
                                        <input name="name" class="form-control" placeholder="Example: Lập trình NodeJs" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Picture</label>
                                        <div class="uploaded-img" style="background-image: url(/img/default-user.jpg)">
                                            <input name="img" type="file" accept="image/*" style="display: none;" required>
                                            <img class="btn-input__img" src="/img/camera.png" alt="btn-input-img">
                                        </div>  
                                    </div>        
                                    <div class="form-group input__price">
                                        <label>Price</label>
                                        <input name="price" class="form-control" type="number" onkeypress="return isNumberKey(event)" required>
                                    </div>
                                </div>
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                            <div class="col-lg-6">
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                        <button type="submit" class="btn btn-default btn-success btn-submit">Submit Button</button>
                        <button type="reset" class="btn btn-default">Reset Button</button>
                    </form>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
